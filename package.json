{
  "name": "@ansvar/brazil-law-mcp",
  "version": "1.0.1",
  "mcpName": "eu.ansvar/brazil-law-mcp",
  "description": "Brazilian federal law database covering data protection (LGPD), internet regulation (Marco Civil), cybercrime, consumer protection, telecommunications, and civil code with Portuguese full-text search",
  "author": "Ansvar Systems <hello@ansvar.eu>",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/Ansvar-Systems/brazil-law-mcp.git"
  },
  "homepage": "https://ansvar.eu",
  "keywords": [
    "mcp",
    "model-context-protocol",
    "brazilian-law",
    "lgpd",
    "marco-civil",
    "data-protection",
    "cybercrime",
    "consumer-protection",
    "anpd",
    "legislation",
    "legal",
    "compliance",
    "ansvar"
  ],
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "brazil-law-mcp": "dist/index.js"
  },
  "files": [
    "dist",
    "data/database.db"
  ],
  "scripts": {
    "build": "tsc",
    "build:db": "node --import tsx scripts/build-db.ts",
    "build:db:free": "node --import tsx scripts/build-db-free.ts",
    "dev": "node --import tsx src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:contract": "vitest run __tests__/contract/",
    "ingest": "node --import tsx scripts/ingest.ts",
    "check-updates": "node --import tsx scripts/check-updates.ts",
    "drift:detect": "node --import tsx scripts/drift-detect.ts",
    "validate": "npm test && npm run test:contract",
    "prepublishOnly": "npm run build",
    "postinstall": "test -d dist || npm run build || true"
  },
  "dependencies": {
    "@ansvar/mcp-sqlite": "^1.0.3",
    "@modelcontextprotocol/sdk": "^1.25.3"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^22.15.29",
    "@vercel/node": "^5.6.4",
    "@vitest/coverage-v8": "^4.0.18",
    "better-sqlite3": "^12.6.2",
    "cheerio": "^1.0.0",
    "fast-xml-parser": "^5.3.5",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=18"
  },
  "bugs": {
    "url": "https://github.com/Ansvar-Systems/brazil-law-mcp/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "overrides": {
    "path-to-regexp": "^8.0.0",
    "undici": "^7.0.0",
    "ajv": "^8.18.0"
  }
}
